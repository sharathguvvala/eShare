<link rel="stylesheet" type="text/css" href="/css/authform.css">

<div id="wrapper" class="container">
    <h3>Forgot Password</h3>
    <div class="forgotpassword">
        <form action="/user/forgotpasswordform" method="POST">
            <div class="form-group">
                <label for="email">Email-Id</label>
                <input type="email" id="email" name="email" required>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <input type="submit" value="Submit">
            </div>
        </form>
        <div class="hr"></div>
        <div id="signin"><p>Already have an account?&nbsp; <a href="/user/signin">Sign In</a></p></div>
        <div id="signup"><p>Don't have an account?&nbsp; <a href="/user/signin">Sign Up</a></p></div>
    </div>   
</div>