<link rel="stylesheet" type="text/css" href="/css/authform.css">

<div id="wrapper" class="container">
    <h3>Delete Account</h3>
    <div class="deleteaccount">
        <form action="/profile/deleteaccountform" method="POST">
            <div class="form-group">
                <label for="email">Email-Id</label>
                <input type="email" id="emailnone" name="email" value="<%= (locals.user).email %>" readonly>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
                <span id="showpwd" class="fa fa-eye-slash"></span>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>   
</div>

<script src="/js/authform.js"></script>