<link rel="stylesheet" type="text/css" href="/css/authform.css">

<div id="wrapper" class="container">
    <h3>Reset Password</h3>
    <div class="resetpassword">
        <form action="/user/resetpasswordform" method="POST">
            <div class="form-group">
                <label for="email">Email-Id</label>
                <input type="email" id="emailnone" name="email" value="<%= token.email %>" readonly>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
                <span id="showpwd" class="fa fa-eye-slash"></span>
            </div>
            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" id="confirm_password" name="confirm_password" required>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
                <input type="submit" value="Reset Password">
            </div>
        </form>
    </div>   
</div>

<script src="/js/authform.js"></script>